# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


POST	/walking					controllers.WalkingController.createWalking()
POST	/poi/:walkingId					controllers.WalkingController.createPoi(walkingId:String)

GET		/poi/:id					controllers.WalkingController.getPoi(id:String)

GET		/location/:lat/:lon			controllers.LocationController.location(lat:String,lon:String)